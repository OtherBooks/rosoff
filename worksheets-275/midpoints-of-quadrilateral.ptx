    <image>
      <latex-image>
        <![CDATA[\begin{tikzpicture}[xscale=1.5, yscale=1.5]
        \draw[->,>=latex, style={black, thick}] (0,0) -- (3,0);
        \draw[->,>=latex, style={black, thick}] (3,0) -- (1,2);
        \draw[->,>=latex, style={black, thick}] (1,2) -- (0,0);
        \draw[->,>=latex, style={black,semithick,dashed}] (1,2) -- (7/6, 4/3) node
